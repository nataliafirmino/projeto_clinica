<!DOCTYPE html>
<html data-bs-theme="dark" lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Inicial</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body>
    <div class="container-fluid p-0">
        <%- include('partials/cabecalho') %>
        <%- include('partials/menu') %>
        <h2 class="text-center mt-4">Bem-vindo(a) à Clínica Médica!</h2>

        <div class="container mt-5">
            <div class="row row-cols-1 row-cols-md-2 g-5"> 

                <!-- Pacientes -->
                <div class="col">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Pacientes</h5>
                            <a href="/pacientes/cadastrar" class="btn btn-primary me-2">
                                <i class="bi bi-person-plus-fill"></i> Cadastrar
                            </a>
                            <a href="/pacientes/" class="btn btn-secondary">
                                <i class="bi bi-list-check"></i> Listar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Médicos -->
                <div class="col">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Médicos</h5>
                            <a href="/medicos/cadastrar" class="btn btn-primary me-2">
                                <i class="bi bi-person-plus-fill"></i> Cadastrar
                            </a>
                            <a href="/medicos/" class="btn btn-secondary">
                                <i class="bi bi-list-check"></i> Listar
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Consultas -->
                <div class="col">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Consultas</h5>
                            <a href="/consultas/agendar" class="btn btn-primary me-2">
                                <i class="bi bi-calendar-plus"></i> Agendar
                            </a>
                            <a href="/consultas/" class="btn btn-secondary">
                                <i class="bi bi-calendar-week"></i> Exibir
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Usuários -->
                <div class="col">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title">Usuário</h5>
                            <a href="/usuarios/cadastrar" class="btn btn-primary me-2">
                                <i class="bi bi-person-plus-fill"></i> Cadastrar
                            </a>
                            <a href="/usuarios/" class="btn btn-secondary">
                                <i class="bi bi-list-check"></i> Listar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    <%- include('partials/rodape') %>
    </div>
</body>
</html>
